{
  "version": "3.0.0",
  "owner": "[Your Name]",
  "project": {
    "name": "[Project Name]",
    "type": "[web-app|cli|library|api]",
    "initialized": "[YYYY-MM-DD]",
    "urls": {
      "production": "[Production URL or N/A]",
      "staging": "[Staging URL or N/A]",
      "repository": "[GitHub/GitLab URL]"
    },
    "techStack": "[Brief comma-separated list, e.g., Next.js, TypeScript, PostgreSQL]",
    "commands": {
      "dev": "[npm run dev or equivalent]",
      "test": "[npm test or equivalent]",
      "build": "[npm run build or equivalent]"
    }
  },
  "preferences": {
    "documentation": {
      "location": "context/",
      "autoCreate": true,
      "updateFrequency": "every-session",
      "includeTimestamps": true,
      "gitTracking": true,
      "pruneInterval": "monthly"
    },
    "workflow": {
      "requirePlanApproval": true,
      "requirePushApproval": true,
      "preferSimpleChanges": true,
      "noTemporaryFixes": true,
      "fullCodeFlowTracing": true,
      "testBeforeCommit": true,
      "useTodoList": true
    },
    "communication": {
      "summaryStyle": "high-level",
      "verbosity": "concise",
      "includeLineNumbers": true,
      "skipPreamble": true,
      "useEmojis": false,
      "explainComplex": false
    },
    "codeReview": {
      "thoroughnessLevel": "comprehensive",
      "makeNoChanges": true,
      "timeConstraintWarning": true,
      "separateFixSession": true,
      "focusAreas": [
        "simplicity",
        "root-causes",
        "security",
        "performance",
        "testing",
        "accessibility",
        "seo"
      ]
    },
    "sessionManagement": {
      "autoSaveInterval": null,
      "captureCommandHistory": true,
      "trackFileChanges": true,
      "preserveWIPState": true,
      "detailedSessionLogs": true
    }
  },
  "commands": {
    "enabled": [
      "/init-context",
      "/migrate-context",
      "/save",
      "/save-full",
      "/review-context",
      "/code-review",
      "/validate-context",
      "/export-context",
      "/update-context-system",
      "/update-templates",
      "/add-ai-header",
      "/session-summary",
      "/organize-docs"
    ],
    "aliases": {
      "/review": "/review-context",
      "/init": "/init-context"
    },
    "customCommands": []
  },
  "documentation": {
    "required": [
      "CONTEXT.md",
      "STATUS.md",
      "DECISIONS.md",
      "SESSIONS.md"
    ],
    "aiHeaders": [
      "claude.md"
    ],
    "optional": [
      "PRD.md",
      "CODE_MAP.md",
      "cursor.md",
      "aider.md",
      "codex.md",
      "ARCHITECTURE.md",
      "CODE_STYLE.md",
      "KNOWN_ISSUES.md",
      "DEPLOYMENT.md",
      "TESTING.md",
      "API.md",
      "SECURITY.md"
    ],
    "autoGenerate": true,
    "templates": {
      "useDefaults": true,
      "customPath": null
    }
  },
  "git": {
    "autoCommit": false,
    "requireApprovalForPush": true,
    "pushProtection": {
      "enabled": true,
      "requireExplicitApproval": true,
      "approvalPhrases": [
        "push",
        "deploy",
        "go ahead and push",
        "yes push"
      ]
    },
    "commitMessageFormat": "standard",
    "includeCoAuthor": true,
    "branchStrategy": "[feature|main|custom]"
  },
  "validation": {
    "stalenessThresholds": {
      "STATUS.md": {
        "green": 7,
        "yellow": 14,
        "red": 30
      },
      "SESSIONS.md": {
        "green": 7,
        "yellow": 14,
        "red": 21
      },
      "CONTEXT.md": {
        "green": 90,
        "yellow": 180,
        "red": 365
      },
      "DECISIONS.md": {
        "appendOnly": true,
        "noThreshold": true
      },
      "CODE_MAP.md": {
        "green": 30,
        "yellow": 60,
        "red": 90,
        "validateOnlyIfExists": true
      }
    }
  },
  "quality": {
    "codeStyle": {
      "simplicityFirst": true,
      "noTemporaryFixes": true,
      "rootCauseOnly": true,
      "minimalImpact": true,
      "fullCodeTracing": true
    },
    "testing": {
      "requireTests": true,
      "coverageCritical": 100,
      "coverageTarget": 80,
      "testBeforeCommit": true
    },
    "performance": {
      "measureFirst": true,
      "optimizeHotPaths": true,
      "userPerceivedPriority": true
    },
    "security": {
      "validateInput": true,
      "noSecretsInCode": true,
      "useEnvVars": true
    }
  },
  "notifications": {
    "sessionReminders": {
      "saveContext": {
        "enabled": true,
        "intervalMinutes": 30
      },
      "reviewContext": {
        "enabled": true,
        "onSessionStart": true
      }
    },
    "warnings": {
      "staleContext": {
        "enabled": true,
        "thresholdDays": 3
      },
      "uncommittedChanges": {
        "enabled": true
      },
      "missingTests": {
        "enabled": true
      }
    }
  },
  "integrations": {
    "github": {
      "enabled": false,
      "autoCreatePR": false,
      "requireApproval": true
    },
    "slack": {
      "enabled": false,
      "webhookUrl": null,
      "notifications": []
    }
  },
  "customRules": {
    "projectSpecific": [],
    "filePatterns": {},
    "exclusions": [
      "node_modules/",
      ".next/",
      "dist/",
      "build/",
      ".git/"
    ]
  },
  "metadata": {
    "createdAt": "[YYYY-MM-DD]",
    "lastUpdated": "[YYYY-MM-DD]",
    "configVersion": "3.0.0",
    "notes": "Configuration for AI Context System"
  },
  "metrics": {
    "saveMetrics": {
      "avgDuration": null,
      "lastSaveDuration": null,
      "totalSaves": 0
    },
    "saveFullMetrics": {
      "avgDuration": null,
      "lastSaveDuration": null,
      "totalSaves": 0
    }
  }
}
